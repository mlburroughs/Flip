<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashcardApp.PracticeDeckPage">
    <ContentPage.Content>

        <StackLayout>

            <Button x:Name="GoBackToDeck"
                    Text="Back To Deck"
                    TextColor="LightSalmon"
                    FontAttributes="Bold"
                    HeightRequest="100"
                    FontSize="20"
                    BackgroundColor="DarkSlateGray"
                    Clicked="GoBackToDeck_Clicked"/>
            
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Label x:Name="DeckTitle"
                   Text="{Binding}"
                   TextColor="DarkSlateGray"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   FontSize="30"
                   FontAttributes="Bold"
                   HeightRequest="50" />

            <Button x:Name="NextItem"
                    Text="{Binding}"
                    TextColor="LightSalmon"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    WidthRequest="40"
                    FontSize="10"
                    BackgroundColor="DarkSlateGray"
                    Clicked="NextItem_Clicked"/>
            </StackLayout>


            <Frame x:Name="CardFrontNameFrame"
                   BorderColor="DarkSlateGray"
                   Margin="10"
                   WidthRequest="2"
                   HasShadow="False">

                <Label x:Name="CardFrontName"
                       Text="{Binding}"
                       TextColor="DarkSlateGray"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="40"
                       FontAttributes="Bold"
                       HeightRequest="200" />

            </Frame>

            <Frame x:Name="CardBackNameFrame" 
                   BorderColor="DarkSlateGray"
                   Margin="10"
                   WidthRequest="2">

                <Label x:Name="CardBackName"
                       Text="{Binding}"
                       TextColor="DarkSlateGray"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="40"
                       FontAttributes="Bold"
                       HeightRequest="200" />

            </Frame>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>