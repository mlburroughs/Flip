<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashcardApp.AddCardPage">
    <ContentPage.Content>
        <StackLayout>
            
            <Editor x:Name="CardName"
                    TextColor="DarkSlateGray"
                    Placeholder="Card Name"
                    PlaceholderColor="SlateGray"
                    HeightRequest="50"/>
            
            <Grid>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="CardSave"
                        Text="Save"
                        TextColor="LightSalmon"
                        HeightRequest="100"
                        BackgroundColor="DarkSlateGray"
                        Clicked="CardSave_Clicked"/>
                <Button x:Name="CardDelete"
                        Text="Delete"
                        TextColor="LightSalmon"
                        HeightRequest="100"
                        BackgroundColor="DarkSlateGray"
                        Clicked="CardDelete_Clicked"
                        Grid.Column="1"/>
                
            </Grid>
            
            <Label x:Name="LabelSave"
                       Text="{Binding}"
                       TextColor="DarkSlateGray"
                       Grid.Column="1"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>